<% if @post.errors.any? %>
    <div class="alert alert-danger">
        <ul>
            <% @post.errors.full_messages.each do |message|%>
                <li> <%= message%> </li>
            <% end %>
        </ul>
    </div>
<% end %>

<%= form_for(@post, url: @post) do |f| %>
    <div class="form-group">
        <%= f.text_field(:title, placeholder: "Title....", class: "form-control" ) %>
    </div>
    <div class="form-group">
        <%= f.text_area(:content, placeholder: "What's in your mind?", rows: 5, class: "form-control") %>
    </div>
    <%= submit_tag( btnt, class: "btn btn-#{btnc} btn-block") %>
<% end %>